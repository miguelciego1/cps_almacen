{% extends 'base.html.twig' %}

{% block page_content %}

    <div class="row">
              <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                <div class="x_panel">
                  <div class="x_title">
                    <h2>LISTADO <small>Registro de Egresos</small></h2>
                    <!-- ----------------------------------------------- -->

                    <div class="title_right">
                         <div class="col-md-5 col-sm-5 col-xs-12 form-group pull-right top_search">
                         <a  class="btn btn-success" href="{{ path('labalmegreso_new') }}" >
                          <i class="glyphicon glyphicon-plus-sign"> NUEVO EGRESO DE PRODUCTOS</i>
                        </a>
                         </div>
                       </div>
                      <!-- ------------------------------------ -->

                    <div class="clearfix"></div>
                  </div>

                  <div class="x_content">
                    <div class="table-responsive">
    <table class="table table-striped jambo_table bulk_action">
        <thead>
            <tr class="headings">
                <th class="column-title">NRO</th>
                <th class="column-title">ENTREGADO POR</th>
                <th class="column-title">RECIBIDO POR</th>
                <th class="column-title">SECCION</th>
                <th class="column-title">ESTADO</th>
                <th class="column-title">OPCIONES</th>
            </tr>
        </thead>
        <tbody>
        {% for labAlmEgreso in labAlmEgresos %}
            <tr>
                <td>{{ labAlmEgreso.id }}</td>
                <td>{{ labAlmEgreso.usuEntregado}}</td>
                <td>{{ labAlmEgreso.recibidoPor}}</td>
                <td>{{ labAlmEgreso.seccion}}</td>
                <td>{% if labAlmEgreso.estado ==1%} <span>En Proceso</span>{% elseif labAlmEgreso.estado == 2 %}<span>Confirmado</span>{% endif %}</td>
                
                <td>
                            <a href="{{ path('labalmegreso_show', { 'id': labAlmEgreso.id }) }}" class="btn btn-info">MOSTRAR</a>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
    </div>
</div>
</div>
</div>
</div>
{% endblock %}
